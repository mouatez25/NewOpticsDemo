            </Expander>
            <Expander Header="Catalogue" IsExpanded="True"  Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}">
                <StackPanel >

                    <Button Click="NavBarItem_Click_9" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Verres
                    </Button>
                    <Button Click="NavBarItem_Click_13" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal" >Suppléments
                    </Button>
                    <Button Click="NavBarItem_Click_10" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Lentilles</Button>
           
                </StackPanel>
            </Expander>
            <Expander Header="Paramètres" IsExpanded="False" IsEnabled="True"  Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}">
            <StackPanel >

                    <Button Click="NavBarItem_Click_4" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Entête
                    </Button>
                    <Button Click="NavBarItem_Click_5" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Utilisateurs</Button>
                    <Button  Click="NavBarItem_Click_6" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Compteurs
                    </Button>

                </StackPanel>
            </Expander>
        </StackPanel>


        <Grid x:Name="gridhome" ShowGridLines="False" Visibility="Visible" Grid.Row="1" Grid.Column="1">

            <Frame x:Name="FrameInterieur" 
 
  JournalOwnership="OwnsJournal" 
