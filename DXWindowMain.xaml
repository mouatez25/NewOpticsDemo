                    <Button Click="NavBarItem_Click" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Clients
                    </Button>
                    <Button Click="NavBarItem_Click_1" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Fournisseurs
                        </Button>
                    <Button Click="NavBarItem_Click_11" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Articles</Button>

                    <Button Click="NavBarItem_Click_7" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Ventes</Button>
                    <Button Click="NavBarItem_Click_8" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Achats</Button>
                    <Button Click="NavBarItem_Click_12" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Normal">Commandes</Button>

                    <Button Click="NavBarItem_Click_3" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Tahoma" Controls:ControlsHelper.ContentCharacterCasing="Lower">Banque/Caisse</Button>
                </StackPanel>
            </Expander>
