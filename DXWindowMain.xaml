                    <MenuItem Header="_Nomenclature produit" FontFamily="Tahoma" Click="MenuItem_Click_4" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                    <MenuItem Header="_Liste des nomenclatures produits" FontFamily="Tahoma" Click="MenuItem_Click_17" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" >

                    </MenuItem>
                    <MenuItem Header="_Liste Famille Produit" FontFamily="Tahoma" Click="MenuItem_Click_18" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" >

                    </MenuItem>
                    <MenuItem Header="_Liste Marque Produit" FontFamily="Tahoma" Click="MenuItem_Click" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" >

                    </MenuItem>
                    <Separator Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />


                </MenuItem>

                <MenuItem x:Name="Mendudcaisse" Header="_Statistique" FontFamily="Tahoma" FontSize="14" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
