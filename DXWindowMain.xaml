                    <MenuItem x:Name="JournalVentes" Header="Journal des ventes / déclarations"  FontFamily="Tahoma" Click="JournalVentes_Click" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"  />
