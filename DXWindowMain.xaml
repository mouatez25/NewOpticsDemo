                    <Separator Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" />
                    <MenuItem x:Name="RéglementPatient" Header="Etat des créances (Clients)"  FontFamily="Tahoma" Click="RéglementPatient_Click" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"  />

