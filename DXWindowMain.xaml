                    <MenuItem x:Name="dffte" Header="_Achats des produits" FontFamily="Tahoma" Click="dffte_Click" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" >

                    </MenuItem>
                    <MenuItem x:Name="dfftes" Header="_Péremption et stock alerte" FontFamily="Tahoma" Click="dfftes_Click" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" >

