        <Label x:Name="labelrecherche" Content="Recherche Par Medecin :" Grid.Row="2" Margin="30,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontFamily="Tahoma" FontSize="13.333" FontWeight="Bold" FontStyle="Italic" />

        <StackPanel  Grid.Row="2" VerticalAlignment="Bottom" Margin="200,0,0,10" Width="300" HorizontalAlignment="Left" Orientation="Horizontal">
            <StackPanel.Resources>
                <ResourceDictionary Source="Styles/AutoComplete.Styles.xaml" />
            </StackPanel.Resources>
            <ctr:AutoComplete x:Name="autoCities"    
                              SelectedValuePath="Nom"
                          TextSearch.TextPath="Nom" 
                          Delay="500" PatternChanged="autoCities_PatternChanged" Width="250" HorizontalAlignment="Center" DropDownClosed="autoCities_DropDownClosed" FontFamily="Tahoma" Foreground="#FFB27300" >
                <ctr:AutoComplete.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Docteur " />
                            <TextBlock Text="{Binding Nom}"  />
                            <TextBlock Text=" " />
                            <TextBlock Text="{Binding Prénom}" />
                        </StackPanel>
                    </DataTemplate>
                </ctr:AutoComplete.ItemTemplate>

            </ctr:AutoComplete>



            <!-- can also do binding on selected value -->
        </StackPanel>
