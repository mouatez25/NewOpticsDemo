                                                                                                        <Path x:Name="path" Data="M282.875,231.875L282.875,240.375 288.625,236z" Fill="White" HorizontalAlignment="Right" Height="10" Margin="0,-6,14,0" Opacity="0.7" Stretch="Fill" VerticalAlignment="Center" Width="6"/>
